<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Name"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/nameTxt"
            />

        <EditText
            android:id="@+id/op_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".5"
            android:background="@drawable/edittxt_bg"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Amount"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/op_name"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/amtTxt"
            />

        <EditText
            android:id="@+id/op_amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".5"
            android:background="@drawable/edittxt_bg"
            android:inputType="number"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/amtTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Close Date"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/op_amt"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/dateTxt"
            />

        <EditText
            android:id="@+id/op_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".5"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/edittxt_bg"
            android:inputType="date"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dateTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Stage"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/op_close"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/stageTxt"
            />

        <Spinner
            android:id="@+id/op_stage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".5"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/edittxt_bg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/stageTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Account"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/op_stage"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/acTxt"
            />

        <Spinner
            android:id="@+id/op_acc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".5"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/edittxt_bg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/acTxt"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Contact"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/op_acc"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/conTxt"
            />

        <Spinner
            android:id="@+id/op_con"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".5"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/edittxt_bg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/conTxt"
            app:layout_constraintStart_toStartOf="parent"/>


        <Button
            app:layout_constraintTop_toBottomOf="@+id/op_con"
            android:id="@+id/opsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_bg"
            android:layout_marginRight="54dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias=".7"
            app:layout_constraintWidth_percent=".8"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>